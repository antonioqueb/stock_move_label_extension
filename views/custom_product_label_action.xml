<odoo>
    <!-- Definición del formulario para seleccionar formato -->
    <record id="view_custom_product_label_layout_form" model="ir.ui.view">
        <field name="name">custom.product.label.layout.form</field>
        <field name="model">custom.product.label.layout</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="print_format" widget="radio"/>
                </group>
                <footer>
                    <button name="process" string="Confirmar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del servidor para imprimir etiquetas -->
    <record id="action_stock_picking_print_labels" model="ir.actions.server">
        <field name="name">Imprimir Etiquetas</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">
            action = env.ref('stock_move_label_extension.action_report_product_label_letter').report_action(self)
        </field>
    </record>


    <!-- Vista heredada de stock.picking para incluir botón de impresión de etiquetas -->
    <record id="view_picking_form_inherit_print_label" model="ir.ui.view">
        <field name="name">stock.picking.form.print.label</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
           <header>
             <button name="action_stock_picking_print_labels" string="Imprimir Etiquetas Personalizadas" type="object" class="oe_highlight"/>
           </header>

        </field>
    </record>

    <!-- Definición de la acción del reporte -->
    <report
        id="action_report_product_label_letter"
        model="stock.move"
        string="Etiquetas en Formato Letter"
        report_type="qweb-pdf"
        name="stock_move_label_extension.report_product_label_letter"
        file="stock_move_label_extension.report_product_label_letter"
        print_report_name="'Etiquetas - %s' % (object.display_name)"
    />
</odoo>
